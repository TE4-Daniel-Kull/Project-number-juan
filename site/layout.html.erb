                    <option value="5">Sweets n' treats</option>
                    <option value="6">Candycane Hotels</option>
                </select>
            </div>
            <button>Search!</button>
            <%= yield %>
        </main>
        <main class="news">
            <img src="img/Poof.png" alt="Pretend this is a news page. plz...">
        </main>
